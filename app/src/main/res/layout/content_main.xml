<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.cdm.priyathsaji.datamanager.MainActivity"
    tools:showIn="@layout/activity_main">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card_view1"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="#1560B6"
            card_view:cardCornerRadius="32dp"
            android:paddingBottom="15dp"
            android:elevation="20dp"
            android:visibility="visible"
            android:layout_marginTop="3sp">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:padding="6dip" >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text = "Nothing to show!! The data will come according to your usage"
                    android:textSize="20sp"
                    android:gravity="center_horizontal"
                    android:textColor="#ffffff"/>
            </RelativeLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/mCard"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="#082277"
            card_view:cardCornerRadius="32dp"
            android:layout_centerHorizontal="true"
            android:paddingBottom="15dp"
            android:visibility="invisible">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dip" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="#ffffff"
                    android:text="Mobile Data Used"
                    android:layout_marginBottom="40dp"
                    android:textSize="30dp"/>
                <ProgressBar

                    android:id="@+id/circular_progress_bar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="225dp"
                    android:layout_height="225dp"
                    android:indeterminate="false"
                    android:max="100"
                    android:layout_marginTop="30dp"
                    android:progress="85"
                    android:progressDrawable="@drawable/circular" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="50dp"
                    android:textColor="#ffffff"
                    android:id="@+id/mdownloaded"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="80dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MB"
                    android:textSize="40dp"
                    android:id="@+id/mUnit"
                    android:textColor="#ffffff"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="125dp"
                    />

            </RelativeLayout>

        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/wCard"
            android:layout_marginTop="250dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="#082277"
            card_view:cardCornerRadius="32dp"
            android:layout_centerHorizontal="true"
            android:visibility="invisible">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="#ffffff"
                    android:text="Wifi Used"
                    android:layout_marginBottom="40dp"
                    android:textSize="35dp"/>
                <ProgressBar

                    android:id="@+id/circular_progress_bar2"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="225dp"
                    android:layout_height="225dp"
                    android:indeterminate="false"
                    android:layout_marginTop="30dp"
                    android:max="100"
                    android:layout_centerHorizontal="true"
                    android:progress="85"
                    android:progressDrawable="@drawable/circular" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="50dp"
                    android:textColor="#ffffff"
                    android:id="@+id/wdownloaded"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="80dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MB"
                    android:id="@+id/wUnit"
                    android:textSize="40dp"
                    android:textColor="#ffffff"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="125dp"
                    />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.RecyclerView
            android:id = "@+id/recyclerView"
            android:scrollbars="vertical"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:visibility="invisible"/>
    </RelativeLayout>




</android.support.v4.widget.NestedScrollView>
